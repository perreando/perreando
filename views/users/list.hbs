<div class="container mt-5">
  <ul class="list-group">
    {{#each users as |user|}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span>{{ user.email }} <span class="badge {{#hasRole user 'admin'}} badge-danger {{else}} badge-secondary {{/hasRole}}">{{ user.role }}</span></span>
        {{#hasRole ../session 'admin'}}
          <form action="/users/{{ user.id }}/delete" method="POST">
            <button class="btn btn-link"><i class="fas fa-times text-danger"></i></button>
          </form>
        {{/hasRole}}
      </li>
    {{/each}}
  </ul>
</div>